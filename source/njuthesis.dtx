    header*    .clist_gset:N = \g_@@_header_oneside_clist,
    header        .initial:n =
      {
        { EL } { \leftmark  }, { OR } { \rightmark }
      },
    header*       .initial:n =
      {
        {  L } { \leftmark  }, {  R } { \rightmark }
      },
